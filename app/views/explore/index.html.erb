<div class="flex flex-col items-center pt-16">
  <h1 class="font-bold text-4xl">Explore users</h1>
  <p>Find like minded people and connect with them</p>

  <div data-controller="geolocation" 
      data-geolocation-url-value="<%= explore_set_location_path %>" 
      data-geolocation-latitude-value="<%= current_user.latitude%>" 
      data-geolocation-longitude-value="<%= current_user.longitude %>"></div>
  
  <% if @explore_users %>
    <h2 class="text-lg text-center"> There is <%= @explore_users.size %> people nearby </p>

    <div class="grid md:grid-cols-4 gap-4 max-w-7xl w-full mx-auto">
      <% @explore_users.each do |user| %>
        <div class="bg-gray-100 rounded-lg shadow-lg h-64 w-full px-2 pb-2 pt-6 flex flex-col justify-between">
          <div>
            <p class="text-center"> <%= user.full_name %> </p>
            <hr/>
            <span class="text-indigo-500"> About me </span>
            <%= user.about_me %>
          </div>
          <%= link_to "Hit em up", profile_path(user), class: "bg-gradient-to-r from-indigo-500 to-purple-500 text-indigo-100 shadow-lg rounded-lg p-1 ml-auto" %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
