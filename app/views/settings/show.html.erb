<div class="w-full flex flex-col items-center pt-16">
  <div class="max-w-2xl w-full mx-auto min-h-[40vh] rounded-lg shadow-lg px-8 md:px-0">
    <%= form_with model: current_user, url: settings_path, method: :post do |f| %>
      <div class="md:w-3/4 mx-auto flex flex-col gap-4 py-4">
        <div class="flex flex-col">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class: "rounded-lg shadow-lg" %>
        </div>

        <div class="flex flex-col">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "rounded-lg shadow-lg" %>
        </div>

        <div class="flex flex-col">
          <%= f.label :about_me %>
          <%= f.rich_text_area :about_me, class: "rounded-lg shadow-lg" %>
        </div>

        <%= f.submit "Update Profile", class: "bg-green-500 text-green-100 shadow-lg p-2 rounded-lg cursor-pointer border-2 border-green-400 hover:border-green-300" %>
      </div>
    <% end %>
    <div class="md:w-3/4 mx-auto flex flex-col gap-4 py-4">
      <p class="text-lg mt-8 text-center"> Other Settings </p>
      <%= link_to "Update Email/Password", edit_user_registration_path, class: "underline" %>
    </div>
  </div>
</div>