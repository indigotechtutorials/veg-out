<div class="w-full flex flex-col pt-8">
  <div class="max-w-2xl w-full mx-auto flex flex-col px-8">
    <%= link_to chats_chat_requests_path do %>
      <span class="bg-green-500 rounded-lg border-2 border-green-200 text-green-100 p-2"> 
        Manage <%= current_user.new_chat_requests.count %> chat requests 
      </span> 
    <% end %>
    <br/>
    <% current_user.chats.each do |chat| %>
      <%= link_to chat do %>
        <div class="w-full rounded-lg bg-gray-100 p-2 hover:bg-green-500">
          Chat with <%= chat.chat_users.where.not(user: current_user).first.user.full_name %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>